<Runner>:
    #Handling the gesture event.
    on_right_to_left_line: manager.current = manager.next() if manager.next() != 'settingsscreen' else 'main'; manager.transition.direction = 'left'
    on_left_to_right_line: manager.current = manager.previous() if manager.previous() != 'settingsscreen' else 'third'; manager.transition.direction = 'right'
    on_bottom_to_top_line:
        manager.get_screen('main').press_renew()
    ScreenManager:
        id: manager
        MyLayout:
            canvas.before:
                Rectangle:
                    size: self.size
                    source: screen_img()
            name: 'main'
            id: main
        Forecast:
            canvas.before:
                Rectangle:
                    size: self.size
                    source: screen_img()
            id: zero
            name: 'zero'
        Forecast:
            canvas.before:
                Rectangle:
                    size: self.size
                    source: screen_img()
            id: first
            name: 'first'
        Forecast:
            canvas.before:
                Rectangle:
                    size: self.size
                    source: screen_img()
            id: second
            name: 'second'
        Forecast:
            canvas.before:
                Rectangle:
                    size: self.size
                    source: screen_img()
            id: third
            name: 'third'
        SettingsScreen:
            name: 'settingsscreen'

