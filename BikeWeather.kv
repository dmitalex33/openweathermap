<SettingsScreen>:
    canvas.before:
        Rectangle:
            #pos: self.pos
            size: self.size
            source: screen_img()
    BoxLayout:
        orientation:"vertical"
        BackgroundLabel:
            background_color: .7, .7, .7, .4
            text:s_city_name
            id: l_city
            size_hint:  1, .1
        GridLayout:
            #padding: 20
            #spacing: 20
            cols: 2
            #row_force_default: True
            #row_default_height: 40
            size_hint:  1, .06

            TextInput:
                text: ''
                id:city

            Button:
                text: "APPLY"
                background_color: .2, .5, 1, .2
                color: 0, 1, 1, 1
                on_release:
                    root.change_city(city.text)
                    l_city.text =  city.text
            CheckBox:
                background_checkbox_disabled_down: 'True'
        Widget:
            size_hint:  1, .74
        Button:
            text: "OK"
            background_color: .2, .5, 1, .2
            color: 0, 1, 1, 1
            size_hint: 1, .1
            on_release:
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
